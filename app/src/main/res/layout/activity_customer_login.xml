<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green"
    tools:context=".activities.CustomerLoginActivity">


    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="206dp"
        android:layout_height="98dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="Customer Login"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:text="Username"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"

        />


    <EditText
        android:id="@+id/txt_clogin_name"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design"
        android:ems="10"
        android:padding="20dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_clogin_name"
        android:layout_centerHorizontal="true"
        android:text="Password"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/txt_xlogin_pass"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/input_design"
        android:ems="10"
        android:padding="20dp"
        android:inputType="textPassword"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_clogin_name" />

    <Button
        android:id="@+id/btn_clogin_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_xlogin_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttons"
        android:text="Login"
        android:textColor="@color/black"
        app:backgroundTint="@color/yellow_btn" />

    <TextView
        android:id="@+id/not_admin_login_link"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/btn_clogin_login"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="New User? Register"
        android:textColor="@color/yellow_200"
        android:textSize="16dp" />

</RelativeLayout>